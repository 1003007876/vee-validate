{
  "name": "vee-validate",
  "private": true,
  "version": "4.0.0",
  "description": "Template Based Validation Framework for Vue.js",
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "homepage": "https://logaretm.github.io/vee-validate/",
  "repository": "https://github.com/logaretm/vee-validate",
  "scripts": {
    "test": "jest",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "ts:defs": "lerna run ts:defs",
    "ts:bundle": "api-extractor run --local --verbose",
    "build": "node scripts/build.js",
    "cover": "jest --coverage",
    "prepublishOnly": "npm run build && npm run ts:defs"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@microsoft/api-extractor": "^7.8.12",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "@vuepress/plugin-back-to-top": "^1.5.2",
    "@vuepress/plugin-google-analytics": "^1.5.2",
    "@vuepress/plugin-pwa": "^1.5.2",
    "chalk": "^4.1.0",
    "codesandbox": "^2.1.14",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "fs-extra": "^9.0.0",
    "gzip-size": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "markdown-it-custom-block": "^0.1.1",
    "prettier": "^2.0.5",
    "raf-stub": "^3.0.0",
    "rollup": "^2.17.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^26.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.9.3",
    "uglify-js": "^3.9.4",
    "vue": "^3.0.0-beta.14",
    "vuepress": "^1.5.2"
  },
  "peerDependencies": {
    "vue": "^3.0.0-beta.14"
  },
  "eslintIgnore": [
    "locale",
    "dist",
    "scripts",
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --edit -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  }
}
