{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "lib": ["esnext", "es2017", "es2016", "es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@vee-validate/core": ["packages/core/src"],
      "@vee-validate/rules": ["packages/rules/src"],
      "@vee-validate/i18n": ["packages/i18n/src"],
      "@vee-validate/yup": ["packages/yup/src"],
      "@vee-validate/shared": ["packages/shared/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/tests"],
  "exclude": ["jest.config.js"]
}
